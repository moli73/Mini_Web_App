<% include ../partials/header%>
    
    <div class="container">
        <header class= "jumbotron">
            <div class="container">
                <h1><i class="fa fa-camera-retro" aria-hidden="true"></i> Welcome to MomentS</h1>
                <p>View all photo blogs post by other users. </p>
                <p>You can post your own photo blog to record and share your nice life moment.</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Photo Blog</a>
                </p>
            </div>
        </header>
        
        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground.image %>"></img>    
                        <div class="caption">
                            <h4><%= campground.name %></h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
        


        
        <a href="/">Go Back to Landing page</a>
        
    </div>





<% include ../partials/footer%>