<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Your Post</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text", placeholder="Blog Title", name="campground[name]" value="<%= campground.name %>"></input>
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="number", placeholder="camp price", name="campground[price]", value="<%= campground.price %>" min="0.01" step="0.01"></input>-->
                <!--</div>-->
                <div class="form-group">
                    <input class="form-control" type="text", placeholder="Photo", name="campground[image]" value="<%= campground.image %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text", placeholder="Blog", name="campground[description]" value="<%= campground.description %>"></input>
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary btn-block">Save</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>
</div>
<% include ../partials/footer %>